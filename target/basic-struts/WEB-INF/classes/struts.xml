<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 6.0//EN"
        "https://struts.apache.org/dtds/struts-6.0.dtd">
<struts>

    <constant name="struts.devMode" value="true" />
    <constant name="struts.custom.i18n.resources" value="globalStruts" />

    <package name="basicstruts2" extends="struts-default">
        
        <action name="index" class="controllers.IndexAction" method="execute">
            <result name="success">/index.jsp</result>
        </action>
        
        <action name="hello" class="controllers.HelloWorldAction" method="execute">
            <result name="success">/HelloWorld.jsp</result>
        </action>
        
        <action name="register" class="controllers.Register">
            <result name="input">/register.jsp</result>
            <result name="success">/thankyou.jsp</result>
        </action>
  
        <action name="registerInput" class="controllers.Register">
            <result name="input">/register.jsp</result>
        </action>      

    </package>
    

</struts>